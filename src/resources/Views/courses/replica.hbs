<div class="m-4">
   <h3>Nhân bản khóa học</h3>

   <form class="mt-4"action='/courses/store' method='POST'>
      <div class="row">

         <div class="col-lg-3 bg-secondary-subtle">

            <img
               class="bg-dark p-1 rounded"
               width="300"
               src="https://img.youtube.com/vi/{{course.videoId}}/maxresdefault.jpg"
               alt="{{course.name}}"
            />
         </div>
         <div class="col-lg-9">
            <div class="form-group">
               <label for="name">
                  Tên khóa học
               </label>
               <input type="text" class="form-control" value="{{course.name}}" id="name" name="name" />
            </div>
            <div class="form-group">
               <label for="author">
                  Author
               </label>
               <input type="texts" name="author" class="form-control" value="{{course.author}}" id="author" />
            </div>

            <div class="form-group">
               <label for="videoId">
                  Video ID
               </label>
               <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" name="videoId" />
            </div>
            <div class="form-group">
               <label for="description">
                  Mô tả
               </label>

               <input type="text" class="form-control" value="{{course.description}}" id="description" name="description" />
               
            </div>

            <button type="submit" class="btn mt-4 btn-primary">
             Nhân bản
            </button>
         </div>
      </div>
   </form>
</div>