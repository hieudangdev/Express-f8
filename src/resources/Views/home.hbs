<div class="mt-4">
    <div class="m-4 row">
        {{!-- href="/courses/{{this.slug}}" --}}

        {{#each courses}}
        <div class="col-sm-6 col-lg-3">
            <div class="card card-course-item">
                <a href="/courses/{{this.slug}}" class="text-decoration-none text-dark">
                    <img class="card-img-top" src="{{this.img}}" alt="{{this.name}}">
                <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.description}}</p>
                </div>
                </a>
            </div>
        </div>
        {{/each}}
        
    </div>
</div>